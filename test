package main

import (
	"fmt"
	"os/exec"
)

func main() {
	_, compileErr := exec.Command("/bin/bash", "-c", "g++ share/test.cpp").Stderr()

	if compileErr != nil {
		fmt.Println("hello")
		fmt.Println(compileErr)
		return
	}

	cmd := "docker run --rm -v ~/go/src/github.com/tahsinrahman/oj/share:/usr/src/app/ python:3-onbuild timeout 0.1 ./a.out"
	out, err := exec.Command("/bin/bash", "-c", cmd).Output()

	fmt.Println(string(out), err)
}
